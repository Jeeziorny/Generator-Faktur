<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_weight="1.5"
        android:onClick="dealerOnClick"
        android:layout_height="match_parent"
        android:padding="20dp"
        android:background="@color/pink"
        xmlns:android="http://schemas.android.com/apk/res/android">

    <TextView android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:gravity="center"
              android:textColor="@color/blue"
              android:textStyle="bold"
              android:textSize="20sp"
              android:layout_weight="3"
              android:text="Wypełnij swoje dane :"/>


    <TextView
            android:text="Nazwa :"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/blue"/>

    <TextView android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:textColor="#020202"
              android:textSize="18sp"
              android:layout_weight="2"
              android:id="@+id/dealerNameText"
              android:textAlignment="center"/>


    <TextView
            android:text="NIP :"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/blue"/>


    <TextView android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:textColor="#020202"
              android:textSize="18sp"
              android:id="@+id/dealerNIPText"
              android:layout_weight="2"
              android:textAlignment="center"/>

    <TextView
            android:text="Adres :"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/blue"/>

    <TextView android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:textColor="#020202"
              android:textSize="18sp"
              android:id="@+id/dealerAdressText"
              android:layout_weight="2"
              android:textAlignment="center"/>

    <TextView
            android:text="Kod Pocztowy :"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/blue" />

    <TextView android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:textColor="#020202"
              android:textSize="18sp"
              android:id="@+id/dealerPostalText"
              android:layout_weight="2"
              android:textAlignment="center"/>

    <TextView
            android:text="Telefon :"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/blue"/>

    <TextView android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:textColor="#020202"
              android:textSize="18sp"
              android:id="@+id/dealerPhoneText"
              android:layout_weight="2"
              android:textAlignment="center"/>

    <Button
            android:layout_width="wrap_content"
            android:text="ZATWIERDŹ"
            android:onClick="confirmOnClick"
            android:background="@color/more_blue"
            android:textColor="@color/pink"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:layout_gravity="end"
            android:layout_weight="0.5"
            android:layout_height="wrap_content"/>
</LinearLayout>