<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        android:layout_width="match_parent" xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        android:layout_height="match_parent" android:layout_marginTop="8dp"
        app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="8dp" android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="8dp" xmlns:android="http://schemas.android.com/apk/res/android">



    <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_weight="1.5"
            android:onClick="buyerOnClick"
            android:layout_height="wrap_content">
        <TextView android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:gravity="center"
                  android:textStyle="bold"
                  android:textSize="20sp"
                  android:layout_weight="5"
                  android:text="Kupujący :"/>

        <TextView android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:layout_weight="2"
                  android:id="@+id/buyerNameText"
                  android:textSize="15sp"
                  android:text="Nazwa :"/>


        <TextView android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:layout_weight="2"
                  android:textSize="15sp"
                  android:id="@+id/buyerNIPText"
                  android:text="NIP :"/>

        <TextView android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:layout_weight="2"
                  android:id="@+id/buyerAdressText"
                  android:textSize="15sp"
                  android:text="Adres :"/>

        <TextView android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:id="@+id/buyerPostalText"
                  android:layout_weight="2"
                  android:textSize="15sp"
                  android:text="Kod Pocztowy :"/>

        <TextView android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:id="@+id/buyerPhoneText"
                  android:layout_weight="2"
                  android:textSize="15sp"
                  android:text="Telefon :"/>
    </LinearLayout>

    <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_weight="1.5"
            android:onClick="dealerOnClick"
            android:layout_height="wrap_content">

        <TextView android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:gravity="center"
                  android:textStyle="bold"
                  android:textSize="20sp"
                  android:layout_weight="5"
                  android:text="Sprzedający :"/>

        <TextView android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:layout_weight="2"
                  android:id="@+id/dealerNameText"
                  android:textSize="15sp"

                  android:text="Nazwa :"/>


        <TextView android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:id="@+id/dealerNIPText"
                  android:layout_weight="2"
                  android:textSize="15sp"
                  android:text="NIP :"/>

        <TextView android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:id="@+id/dealerAdressText"
                  android:layout_weight="2"
                  android:textSize="15sp"
                  android:text="Adres :"/>

        <TextView android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:id="@+id/dealerPostalText"
                  android:layout_weight="2"
                  android:textSize="15sp"
                  android:text="Kod Pocztowy :"/>

        <TextView android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:id="@+id/dealerPhoneText"
                  android:layout_weight="2"
                  android:textSize="15sp"
                  android:text="Telefon :"/>
    </LinearLayout>

    <TextView android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_weight="0.5"
    />


    <com.beardedhen.androidbootstrap.BootstrapButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.1"
            android:layout_gravity="end"
            android:onClick="nextOnClick"
            android:id="@+id/next"
            android:text="DALEJ"
    />


</LinearLayout>